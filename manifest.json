{
  "manifest_version": 2,
  "name": "Tokei API Opener",
  "version": "1.0",
  "description": "A Firefox extension that opens the corresponding Tokei API page while browsing GitHub repository pages.",
  "permissions": [
    "tabs",
    "https://tokei.kojix2.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.github.com/*"],
      "js": ["utils.js", "content.js"]
    }
  ],
  "background": {
    "scripts": ["utils.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
